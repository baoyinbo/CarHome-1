<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#40b5b5b5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/ic_launcher"
                android:layout_gravity="right"/>
            </LinearLayout>
            <LinearLayout
                android:background="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:gravity="center">
                <com.lanou3g.carhome.forum.tyfourhours.TyFourHoursCircleImage
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ahlib_userpic_default"
                    android:id="@+id/iv_item_tyfour_hours"
                    app:is_circle="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="账号登录"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff"
                android:padding="10dp">
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/umeng_socialize_sina_off"
                    android:text="新浪微博"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/umeng_socialize_qq_off"
                    android:text="腾讯qq"/>
                <TextView
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@mipmap/umeng_socialize_wechat_gray"
                    android:text="微信登录"/>
            </LinearLayout>
            <TextView
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ahlib_icon_collection_p2"
                android:drawableRight="@mipmap/right_btn"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的收藏"/>
            <TextView
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ahlib_icon_collection_p2"
                android:drawableRight="@mipmap/right_btn"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的优惠券"/>
            <TextView
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ahlib_icon_collection_p2"
                android:drawableRight="@mipmap/right_btn"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="浏览历史"/>
            <TextView
                android:layout_marginTop="0.5dp"
                android:padding="5dp"
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ahlib_icon_collection_p2"
                android:drawableRight="@mipmap/right_btn"
                android:drawablePadding="10dp"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的草稿"/>
            <TextView
                android:gravity="center_vertical"
                android:drawableLeft="@mipmap/ahlib_icon_collection_p2"
                android:drawableRight="@mipmap/right_btn"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="设置"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>