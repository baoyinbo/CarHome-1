<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="12dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/custom_title_selection"
             android:id="@+id/include_title_selection"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/push_body"
        android:padding="4dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_write_bg">
        <TextView
            style="@style/set_up_text"
            android:text="@string/push_system_message"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch_btn_sys_msg"/>
    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_write_bg">
        <TextView
            style="@style/set_up_text"
            android:text="@string/push_person_message"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/push_date"
        android:padding="4dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:id="@+id/ll_set_up_push_date"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_write_bg">
        <TextView
            style="@style/set_up_text"
            android:text="@string/push_receiving_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_set_push_date"
            android:text="每日8:00-22:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/right_btn"/>
    </LinearLayout>
</LinearLayout>